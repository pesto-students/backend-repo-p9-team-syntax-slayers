{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "target": "ES2021", // The version of ECMAScript to compile to
    "module": "CommonJS", // The module system to use
    "outDir": "./dist", // The output directory for compiled files
    "rootDir": "./src", // The root directory of your TypeScript source files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow default imports from modules with export default
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing for file names
  },
  "include": [
    "src/**/*.ts",
    "src/postgres/entity/*.entity.ts",
    "src/postgres/entity/TimeSlotJS.entity.js",
    "src/postgres/entity/SalonJS.entity.js",
    "src/CRONJobs/deletePreviousDaySlots.ts",
    "src/CRONJobs/generate7thDaySlots.ts",
    "src/CRONJobs/generateFirstTimeSlots.ts"
  ], // List of files to include for compilation
  "exclude": ["node_modules", "dist"] // List of files to exclude from compilation
}
